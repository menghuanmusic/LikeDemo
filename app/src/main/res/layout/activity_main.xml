<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xm.likedemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <com.xm.likedemo.LikeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:selectedSrc="@drawable/ic_messages_like_selected"
        app:shining="@drawable/ic_messages_like_selected_shining"
        app:unselectedSrc="@drawable/ic_messages_like_unselected"
        app:scale="0.8"
        app:num="88"
        app:numTextColor="@color/color_CCCCCC"
        app:clickCircleColor="@color/color_E4583E"/>

    <com.xm.likedemo.LikeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:selectedSrc="@drawable/ic_messages_like_selected"
        app:shining="@drawable/ic_messages_like_selected_shining"
        app:unselectedSrc="@drawable/ic_messages_like_unselected"
        app:scale="0.8"
        app:num="109"
        app:numTextColor="@color/color_CCCCCC"
        app:clickCircleColor="@color/color_E4583E"/>


    <com.xm.likedemo.LikeView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        app:selectedSrc="@drawable/ic_messages_like_selected"
        app:shining="@drawable/ic_messages_like_selected_shining"
        app:unselectedSrc="@drawable/ic_messages_like_unselected"
        app:scale="0.8"
        app:num="999"
        app:numTextColor="@color/color_CCCCCC"
        app:clickCircleColor="@color/color_E4583E"/>
</LinearLayout>
